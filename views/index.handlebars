<div class="col-md-12" id="top-bar">
    <h1>Eat Da Burger!</h1>
</div>

<div class="row">

    <div class="col-md-4" id="burgers">
        <h1>Menu</h1>

        {{#each burger_data}}
        {{#unless this.devoured}}

        <div class="col" id="menu-burgers">
            <pre>{{this.id}}. {{this.burger_name}}</pre>
        </div>

        <div class="col">

            <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                <button type="submit" class="btn btn-default">
                    Eat Dat Burger!
                </button>
            </form>

        </div>

        {{/unless}}
        {{/each}}

    </div>

    <div class="col-md-4" id="burger-img">
        <img src="assets/img/burger.png" alt="burger" style="width:250px;height:250px;"/>
            <div class="row">
        <div class="col">
            <form action="/burgers/create" method="POST">
                <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
                <br>
                <button type="submit" class="btn btn-primary" id="text-center-button">Order Dat Burger!</button>
            </form>
            <p>What kind of burger do you want?</p>
        </div>
    </div>
    </div>

    <div class="col-md-4" id="devoured">
        <h1>Eaten</h1>
        {{#each burger_data}}
        {{#if this.devoured}}
        <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
        {{/if}}
        {{/each}}
    </div>

</div>